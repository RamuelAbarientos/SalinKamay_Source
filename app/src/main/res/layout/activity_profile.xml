<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="56dp"> <!-- Leaves space for bottom nav -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learn Filipino Sign Language"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/rounded_box"
                android:textColor="@color/black"
                android:paddingBottom="16dp"
                android:fontFamily="@font/headerfont"/>

            <ImageView
                android:id="@+id/img_fsl_alphabet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:paddingTop="28dp"
                android:src="@drawable/fsl_alphabet"
                android:contentDescription="Filipino Sign Language Alphabet"
                android:paddingBottom="50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic Sign Language Communication"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_box"
                android:gravity="center"
                android:textColor="@color/black"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/headerfont"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Video Frames -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="64dp">
                    <include layout="@layout/video_controls_1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Video 1: Emergency"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:alpha="0.7"
                        android:padding="8dp"
                        android:layout_marginTop="10dp"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="54dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video 2: Again"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:alpha="0.7"
                        android:padding="8dp"
                        android:layout_gravity="top"/>
                    <include layout="@layout/video_controls_2" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="54dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video 3: Yes or No"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:alpha="0.7"
                        android:padding="8dp"
                        android:layout_gravity="top"/>
                    <include layout="@layout/video_controls_3" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="54dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video 4: Please"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:alpha="0.7"
                        android:padding="8dp"
                        android:layout_gravity="top"/>
                    <include layout="@layout/video_controls_4" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video 5: Kindly Finger Spell"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:alpha="0.7"
                        android:padding="8dp"
                        android:layout_gravity="top"/>
                    <include layout="@layout/video_controls_5" />
                </FrameLayout>

                <!-- Special Thanks Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="50dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Special Thanks To The"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Special Ministry For the Deaf"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:paddingBottom="16dp" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ministry"
                        android:contentDescription="Special Thanks Image"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:clipToOutline="true"
                        android:background="@drawable/round_shape" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar outside scroll view -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/nav_bar_color"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
