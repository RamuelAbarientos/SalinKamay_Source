<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background">

    <!-- App Logo -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/salinkamay_logo"
        android:layout_gravity="center"
        android:contentDescription="App Logo"
        android:scaleType="centerInside"/>

    <!-- About Us Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SalinKamay is a student-led project that bridges the gap between Filipino Sign Language (FSL) users and non-users. It translates static hand gestures into text, making communication more inclusive. The device also promotes FSL awareness and encourages more people to understand and support the Deaf community."
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:paddingTop="12dp"
        android:gravity="center"/>

</LinearLayout>
